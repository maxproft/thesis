#!/usr/bin/python
from Tkinter import *
import numpy as np
import matplotlib.pyplot as plt
import os
from mpl_toolkits.mplot3d import Axes3D
from matplotlib import cm


import global_vars as g
root_folder = os.getcwd()


try:
    d = pickle.load(open(root_folder+"/defaults", 'rb'))
    for x in g.dic:
      if x not in d: 
         d[x]=g.dic[x]
    g.dic = d
except:
    print("Couldn't Load Variables.")
    with open(root_folder+"/default", 'wb') as f:
       pickle.dump(g.dict, f)


def get_values():
    for x in g.dict:
        g.dic[x] = g.gui[x].get()
    print g.dic



def gui_num(varname, label, window, ROW, COL):
    g.labels[varname] = Label(window, text=label)
    g.labels[varname].grid(row= ROW, column=COL, sticky = W)
    temp = StringVar()
    g.dictionary_in[varname] = Entry(window, textvariable = temp)
    temp.set(g.dictionary[varname])
    g.dictionary_in[varname].grid(row= ROW, column = COL+1)

def gui_str(varname, label, window, ROW, COL):
    Label(window, text=label).grid(row= ROW, column=COL, sticky = W)
    g.dictionary_in[varname] = Entry(window)
    g.dictionary_in[varname].insert(0, g.dictionary[varname])
    g.dictionary_in[varname].grid(row= ROW, column = COL + 1)

def gui_radio(varname, MODES, window, ROW, COL):
   g.dictionary_in[varname] = StringVar()
   g.dictionary_in[varname].set(g.dictionary[varname])
   for name, mode in MODES:
      g.dictionary_in[varname+mode] = Radiobutton(window, text=name, variable=g.dictionary_in[varname], value=mode)
      g.dictionary_in[varname+mode].grid(row=ROW, column = COL, sticky = W)
      COL+=1

if __name__ == "__main__":

root = tk.Tk()





